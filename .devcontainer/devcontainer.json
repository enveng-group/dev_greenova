{
  "name": "Greenova Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "greenova",
  "workspaceFolder": "/workspaces/greenova",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "containerUser": "vscode",
  "forwardPorts": [8000],

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish",
        "terminal.integrated.profiles.linux": {
          "fish": {
            "path": "/usr/bin/fish"
          }
        },
        "terminal.integrated.env.linux": {
          "PYTHONPATH": "/workspaces/greenova:/workspaces/greenova/greenova:${containerEnv:PYTHONPATH}",
          "PYTHONUNBUFFERED": "1",
          "DJANGO_SETTINGS_MODULE": "greenova.settings",
          "PATH": "/home/vscode/.local/bin:/workspaces/greenova/.venv/bin/:/usr/local/share/nvm/current/bin/npm:${containerEnv:PATH}",
          "PYTHONSTARTUP": "/workspaces/greenova/pythonstartup",
          "NVM_DIR": "/usr/local/share/nvm"
        },
        "python.defaultInterpreterPath": "/workspaces/greenova/.venv/bin/python",
        "python.analysis.extraPaths": [
          "/workspaces/greenova",
          "/workspaces/greenova/greenova"
        ],
        "files.associations": {
          "*.html": "django-html",
          "*.css": "css",
          "*.js": "javascript",
          "*.md": "markdown",
          "*.py": "python",
          ".env*": "dotenv",
          "dev.txt": "pip-requirements",
          "base.txt": "pip-requirements",
          "prod.txt": "pip-requirements",
          "constraints.txt": "pip-requirements",
          "base.in": "pip-requirements",
          "dev.in": "pip-requirements",
          "prod.in": "pip-requirements",
          "combined.in": "pip-requirements"
        },
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.autopep8",
          "editor.formatOnSave": true
        },
        "[django-html]": {
          "editor.defaultFormatter": "monosans.djlint",
          "editor.formatOnSave": true
        },
        "[javascript]": {
          "editor.defaultFormatter": "dbaeumer.vscode-eslint",
          "editor.formatOnSave": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.autopep8",
        "ms-python.isort",
        "ms-python.pylint",
        "ms-python.mypy-type-checker",
        "batisteo.vscode-django",
        "monosans.djlint",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "bmalehorn.vscode-fish",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "DavidAnson.vscode-markdownlint",
        "timonwong.shellcheck",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "foxundermoon.shell-format",
        "EditorConfig.EditorConfig",
        "ms-vscode.vscode-copilot-data-analysis",
        "github.vscode-pull-request-github",
        "ms-azuretools.vscode-docker",
        "dotenv.dotenv-vscode",
        "ms-toolsai.jupyter",
        "snyk-security.snyk-vulnerability-scanner",
        "ms-cst-e.vscode-devskim",
        "ms-vscode.makefile-tools",
        "zxh404.vscode-proto3",
        "plex.vscode-protolint",
        "bradlc.vscode-tailwindcss",
        "pycqa.bandit-pycqa",
        "willumz.generic-pseudocode",
        "stylelint.vscode-stylelint",
        "wholroyd.jinja",
        "rarnoldmobile.todo-txt",
        "github.vscode-github-actions",
        "ymotongpoo.licenser",
        "marp-team.marp-vscode",
        "dbcode.dbcode",
        "ms-vscode.copilot-mermaid-diagram",
        "ms-toolsai.datawrangler",
        "charliermarsh.ruff",
        "ms-python.flake8"
      ]
    }
  },

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=delegated",
    "source=dotfiles,target=/home/vscode/dotfiles,type=volume"
  ],

  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode && mkdir -p /home/vscode/.local/share/fish && chmod -R 755 /home/vscode && chmod +x /workspaces/greenova/.devcontainer/post_start.sh",
  "postStartCommand": "cd /workspaces/greenova && /bin/bash ./.devcontainer/post_start.sh || echo 'Warning: post_start.sh had errors but container setup will continue'"
}
