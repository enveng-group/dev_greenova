{
  "name": "Greenova Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "greenova",
  "workspaceFolder": "/workspaces/greenova",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "containerUser": "vscode",
  "forwardPorts": [8000],

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish",
        "terminal.integrated.profiles.linux": {
          "fish": {
            "path": "/usr/bin/fish"
          }
        },
        "terminal.integrated.env.linux": {
          "PYTHONPATH": "/workspaces/greenova:/workspaces/greenova/greenova:${containerEnv:PYTHONPATH}",
          "PYTHONUNBUFFERED": "1",
          "DJANGO_SETTINGS_MODULE": "greenova.settings",
          "PATH": "/home/vscode/.local/bin:/workspaces/greenova/.venv/bin/:/usr/local/share/nvm/current/bin/npm:/usr/local/share/nvm/versions/node/v20.19.1/bin/:${containerEnv:PATH}",
          "PYTHONSTARTUP": "/workspaces/greenova/pythonstartup",
          "NVM_DIR": "/usr/local/share/nvm"
        },
        "python.defaultInterpreterPath": "/workspaces/greenova/.venv/bin/python",
        "python.analysis.extraPaths": [
          "/workspaces/greenova",
          "/workspaces/greenova/greenova"
        ],
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.autopep8",
          "editor.formatOnSave": true
        },
        "[django-html]": {
          "editor.defaultFormatter": "monosans.djlint",
          "editor.formatOnSave": true
        },
        "[javascript]": {
          "editor.defaultFormatter": "dbaeumer.vscode-eslint",
          "editor.formatOnSave": true
        },
        "snyk.cliPath": "/usr/local/share/nvm/versions/node/v20.19.1/bin/snyk",
        "snyk.experimental.useCli": true,
        "snyk.languageServerPath": "/home/vscode/.local/share/snyk/snyk-ls",
        "snyk.cachePath": "/home/vscode/.local/share/snyk"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.autopep8",
        "ms-python.isort",
        "ms-python.pylint",
        "ms-python.mypy-type-checker",
        "batisteo.vscode-django",
        "monosans.djlint",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "bmalehorn.vscode-fish",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "DavidAnson.vscode-markdownlint",
        "timonwong.shellcheck",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "foxundermoon.shell-format",
        "EditorConfig.EditorConfig",
        "ms-vscode.vscode-copilot-data-analysis",
        "github.vscode-pull-request-github",
        "ms-azuretools.vscode-docker",
        "dotenv.dotenv-vscode",
        "ms-toolsai.jupyter",
        "snyk-security.snyk-vulnerability-scanner",
        "ms-cst-e.vscode-devskim",
        "ms-vscode.makefile-tools",
        "zxh404.vscode-proto3",
        "plex.vscode-protolint",
        "bradlc.vscode-tailwindcss",
        "pycqa.bandit-pycqa",
        "willumz.generic-pseudocode",
        "stylelint.vscode-stylelint",
        "wholroyd.jinja",
        "rarnoldmobile.todo-txt",
        "github.vscode-github-actions",
        "ymotongpoo.licenser",
        "marp-team.marp-vscode",
        "dbcode.dbcode",
        "ms-vscode.copilot-mermaid-diagram",
        "ms-toolsai.datawrangler",
        "charliermarsh.ruff",
        "arahata.linter-actionlint"
      ]
    }
  },

  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=ro",
    "source=dotfiles,target=/home/vscode/dotfiles,type=volume"
  ],

  "initializeCommand": "mkdir -p \"${localWorkspaceFolder}/.devcontainer/.cache/buildx\" && (docker buildx inspect greenova >/dev/null 2>&1 && docker buildx rm greenova || true) && docker buildx create --name greenova && docker buildx use greenova && (docker buildx bake --file \"${localWorkspaceFolder}/.devcontainer/docker-bake.hcl\" --load greenova || (echo \"Docker build failed. Check configuration.\" && exit 1))",
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode && mkdir -p /home/vscode/.local/share/fish && chmod -R 755 /home/vscode && chmod +x /workspaces/greenova/.devcontainer/post_start.sh",
  "postStartCommand": "cd /workspaces/greenova && /bin/bash ./.devcontainer/post_start.sh",
  "features": {
    "ghcr.io/devcontainers-extra/features/snyk-cli:1": {
      "version": "latest"
    },
    "ghcr.io/r3dpoint/devcontainer-features/tailwindcss-standalone-cli:1": {
      "version": "latest"
    },
    "ghcr.io/marcozac/devcontainer-features/shellcheck:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/shfmt:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/curl-apt-get:1": {},
    "ghcr.io/jungaretti/features/make:1": {},
    "ghcr.io/swift-server-community/swift-devcontainer-features/sqlite:1": {},
    "ghcr.io/devcontainers-extra/features/neovim-apt-get:1": {},
    "ghcr.io/devcontainers-extra/features/actionlint:1": {
      "version": "latest"
    }
  }
}
