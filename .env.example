# Greenova Environment Configuration
# Copy this file to .env and adjust the values

# Django Settings
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=django-insecure-dev-only-key-change-this-in-production
DJANGO_SETTINGS_MODULE=greenova.settings
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin
DJANGO_SUPERUSER_USERNAME=admin

# Database Settings
# SQLite (default)
DATABASE_URL=sqlite:///db.sqlite3

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Development Settings
PYTHONPATH=/workspaces/greenova:/workspaces/greenova/greenova
PYTHONSTARTUP=/workspaces/greenova/pythonstartup
