# Custom Aliases for IPython & Git
# IPython Aliases
alias ipy='ipython'
alias ipy-run='ipython -i'
alias ipy-shell='python3 manage.py shell_plus --ipython'

# Git Aliases
alias gst='git status'
alias gpl='git pull'
alias gps='git push'
alias gco='git checkout'
alias gaa='git add .'
alias gcm='git commit -m'
alias gcam='git commit -am'
alias gpull='git pull origin'
alias gpush='git push origin'

# Common file operations
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'

# Python shortcuts
alias py3='python3'
alias pipi='pip install'
