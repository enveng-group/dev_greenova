{
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features",
    "editor.formatOnSave": false,
    "editor.suggest.insertMode": "replace",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[git-commit]": {
    "editor.rulers": [
      72,
      50
    ],
    "editor.wordWrap": "on",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.fontFamily": "monospace"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "monosans.djlint",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace"
  },
  "[django-html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "monosans.djlint",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.markdown-language-features",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[pip-requirements]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.insertFinalNewline": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true
  },
  "[plaintext]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": false,
      "strings": false,
      "other": false
    },
    "editor.tabSize": 4,
    "files.insertFinalNewline": true
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.rulers": [
      88,
      100
    ],
    "editor.wordBasedSuggestions": "off"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true,
    "files.eol": "\n"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "autopep8.args": [
    "--max-line-length=88",
    "--experimental",
    "--aggressive",
    "--aggressive",
    "--in-place",
    "--recursive",
    "--select=E,W,F",
    "--ignore=E226,E302,E41",
    "--exclude=.git,__pycache__,.pytest_cache,.venv,node_modules"
  ],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    79,
    88,
    100
  ],
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "files.watcherInclude": [
    "**/*.py",
    "**/*.html",
    "**/*.css",
    "**/*.js"
  ],
  "extensions.ignoreRecommendations": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.indexing": false,
  "javascript.suggest.enabled": false,
  "typescript.suggest.enabled": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "github.copilot.advanced": {
    "listCount": 10,
    "inlineSuggestCount": 3,
    "debug.enable": false
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "html.format.templating": true,
  "task.reconnection": true,
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.editor.enablePreview": false,
  "debug.inlineValues": "auto",
  "debug.console.fontSize": 14,
  "debug.toolBarLocation": "docked",
  "debugpy.debugJustMyCode": false,
  "editor.stickyScroll.enabled": true,
  "eslint.validate": [
    "javascript"
  ],
  "eslint.format.enable": true,
  "files.associations": {
    "*.html": "django-html",
    "*.js": "javascript",
    "*.py": "python",
    "*.css": "css",
    "*.json": "json",
    "*.md": "markdown",
    "*.txt": "plaintext",
    "requirements*.txt": "pip-requirements",
    "*.toml": "toml",
    "pyproject.toml": "toml",
    "poetry.toml": "toml",
    "pdm.toml": "toml"
  },
  "html.format.wrapLineLength": 88,
  "html.format.wrapAttributes": "preserve-aligned",
  "javascript.format.semicolons": "insert",
  "javascript.preferences.quoteStyle": "single",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.extraPaths": [
    "${workspaceFolder}/.venv/lib/python3.13/site-packages"
  ],
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.inlayHints.functionReturnTypes": false,
  "python.analysis.inlayHints.variableTypes": false,
  "python.testing.unittestEnabled": true,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./greenova",
    "-p",
    "*test*.py"
  ],
  "eslint.codeActionsOnSave.rules": [
    "!prettier/*",
    "*"
  ],
  "python.testing.pytestEnabled": false,
  "remoteHub.gitProtocol": "ssh",
  "github.gitProtocol": "ssh",
  "python.analysis.autoFormatStrings": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.enablePytestSupport": false,
  "python.analysis.languageServerMode": "light",
  "python.analysis.logLevel": "Error",
  "evenBetterToml.formatter.alignEntries": true,
  "evenBetterToml.formatter.arrayAutoExpand": true,
  "evenBetterToml.formatter.arrayAutoCollapse": false,
  "evenBetterToml.formatter.compactArrays": true,
  "evenBetterToml.formatter.compactEntries": false,
  "evenBetterToml.formatter.indentTables": true,
  "evenBetterToml.formatter.indentString": "    ",
  "evenBetterToml.formatter.columnWidth": 80,
  "evenBetterToml.taploConfig.enabled": true,
  "evenBetterToml.schema.links": true,
  "evenBetterToml.schema.enabled": true,
  "evenBetterToml.formatter.reorderKeys": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--max-line-length=88",
    "--experimental",
    "--aggressive"
  ],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true
}
